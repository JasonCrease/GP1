<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GP1" Height="690" Width="1250">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Generation: 0" Name="labelGeneration" Width="150"/>
                <Button Content="Do evolution" Name="buttonDoEvolution" Click ="buttonDoEvolution_Click" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Fitness"/>
                <Label Content="0.0" Width="100" Name="labelFitness"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Border BorderBrush="Black" BorderThickness="2" Height="600" Width="1250">
                    <Image Name ="imageProgram1" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"/>
                </Border>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>