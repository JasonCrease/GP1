<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Icon="./dna_helix.ico"
        Title="GP1" Height="700" Width="1400">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical">
                <Button Content="Do evolution" Name="buttonDoEvolution" Click ="buttonDoEvolution_Click" Width="200" Height="50"/>

                <Button Content="Search randomly for program" Name="buttonSearchRandomly" Click="buttonSearchRandomly_Click" Height="50" Width="200"/>
                
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Label Content="Generation" Grid.Row="0" Grid.Column="0"/>
                    <Label Content="0" Grid.Row="0" Grid.Column="1" Name="labelGeneration"/>
                    <Label Content="Best Fitness" Grid.Row="1" Grid.Column="0"/>
                    <Label Content="0.0" Grid.Row="1" Grid.Column="1" Name="labelFitness" />
                    <Label Content="Best Treesize" Grid.Row="2" Grid.Column="0"/>
                    <Label Content="0.0" Grid.Row="2" Grid.Column="1" Name="labelBestTreeSize" />
                    <Label Content="1st Quartile" Grid.Row="3" Grid.Column="0"/>
                    <Label Content="0.0" Grid.Row="3" Grid.Column="1" Name="label1stQuartile" />
                    <Label Content="2nd Quartile" Grid.Row="4" Grid.Column="0"/>
                    <Label Content="0.0" Grid.Row="4" Grid.Column="1" Name="label2ndQuartile" />
                    <Label Content="3rd Quartile" Grid.Row="5" Grid.Column="0"/>
                    <Label Content="0.0" Grid.Row="5" Grid.Column="1" Name="label3rdQuartile" />
                    <Label Content="4th Quartile" Grid.Row="6" Grid.Column="0"/>
                    <Label Content="0.0" Grid.Row="6" Grid.Column="1" Name="label4thQuartile" />
                    <Image Name ="imageHistogram" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Height="400" Width="100"/>
                </Grid>
                
            </StackPanel>
            <StackPanel Orientation="Vertical">
            <Border BorderBrush="Black" BorderThickness="2">
                <Image Name ="imageProgram1" Height="400" Width="1100"/>
            </Border>
            <Border BorderBrush="Black" BorderThickness="2">
                <Image Name ="imageProgram2" Height="400" Width="1100"/>
            </Border>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>