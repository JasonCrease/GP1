        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GP1" Height="700" Width="1050">
    <Grid>
        <StackPanel>
            <Button Content="Search randomly  for program" Name="buttonSearchRandomly" Click="buttonSearchRandomly_Click" Width="200"/>
            <Button Content="Generate random program" Name="buttonGenRandProgram" Click="buttonGenRandProgram_Click" Width="200"/>
            <Button Content="Mutate program" Name="buttonMutateProgram" Click ="buttonMutateProgram_Click" Width="200"/>
            <StackPanel Orientation="Horizontal">
                <Label Content="Fitness"/>
                <Label Content="0.0" Width="100" Name="labelFitness"/>
            </StackPanel>
            <Image Name ="imageProgram" Height="500" Width="1000"/>
        </StackPanel>
    </Grid>
</Window>